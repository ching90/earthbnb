<!DOCTYPE html>
<html>
<head>
  <title>TestApp</title>
   <%= include_gon %>
    <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


  <script src="https://code.jquery.com/jquery-3.1.0.min.js" integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s=" crossorigin="anonymous"></script>


  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.0/themes/smoothness/jquery-ui.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.0/jquery-ui.min.js"></script>

</head>
<body>
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Montserrat">





<div class="navbar container-fluid">
  <div class="navbar navbar-default"> 
      <div class="navbar-inner">

        <ul class="nav navbar-nav navbar-left">
          <li>
              <a href="#"><%=image_tag 'http://www.bladecreativebranding.com/blog/wp-content/uploads/2014/11/New-2014-Air-Bnb-Logo.png', style:"margin-top:0px; height:30px; width:30px;"%></a>
          </li>
          
          <li>
            <span class="glyphicon glyphicon-search"></span>
            <li><form  class= "nav navbar-form">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Where to?">
              </div>
<!--               <button type="submit" class="btn btn-default">Submit</button> -->
            </form>
            </li>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">  
          <% if signed_in? %>
<!--           <li>Signed in as: <%= current_user.email %><li> -->
          <li class="active"><a href="/">Home</a></li>

          <li><%= link_to "Become a Host", listings_path, method: "get"%></li>
          
          <li class="dropdown">
            <a class="dropdown-toggle" href="/users/<%=current_user.id%>">My Profile
                <%if current_user.avatars != []%>

                  <span><%= image_tag (current_user.avatars[0].thumb.url), class:"profile-thumbnail"%></span>
                <%end%>
            </a>

            <ul class="dropdown-menu">
              <li><%=link_to 'Edit', edit_user_path(current_user.id)%></li>
              <li><a href="#">Account Settings</a></li>
              <li><%= link_to 'Log Out', sign_out_path, method: :delete %></li> 
            </ul>

          </li>

          <%else%>
          
          <li><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in"%></li>
          <li><a href="/sign_in"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
          
          <%end%>
        </ul>

      
      </div>
    
    
  </div>
   
</div>

    <div id="flash">
      <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
    </div>

<%= yield %>

</body>
</html>
